body {
	background: #FFF;
	color: #000;
	font-weight: 300;
	font-family: 'Lato', Calibri, Arial, sans-serif;
}

a {
	text-decoration: none;
	color: #f7f7f7;
	outline: none;
}

a:hover, a:focus {
	color: #fff;
	outline: none;
}

/* Clearfix */
.clearfix:before,
.clearfix:after {
	display: table;
	content: " ";
}

.clearfix:after {
	clear: both;
}


.h1 {
	margin: 0;
	font-weight: 300;
	font-size: 2.625em;
	line-height: 1.3;
}

.span {
	display: block;
	padding: 0 0 0.6em 0.1em;
	font-size: 60%;
	opacity: 0.7;
}

.content {
	padding: 4em 2em;
	max-width: 1200px;
	margin: 0 auto;
}

.block {
	float: left;
	padding: 1.3em 1em;
}

.block-top {
	width: 10%;
	float: left;
	padding: 1.1em 1em;
	border: 1px solid #66c8bd;
	border-radius: 70%;
	background: #66c8bd;
	height: 180px;
	margin: 5px 15px;
}


.circular { width: 300px; height: 300px; border-radius: 150px; -webkit-border-radius: 150px; 
	-moz-border-radius: 150px; background: url(http://www.tublog.com/tuimagen.jpg) no-repeat; 
	box-shadow: 0 0 8px rgba(0, 0, 0, .8); -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8); 
	-moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8); }


section{
	padding:0;
	margin-top:0;
	position:relative;
}

.block-60 {
	width: 100%;
	margin: 0;
}

.block p {
	margin: 0;
	padding: 0 1em 0.6em;
	font-size: 1.8em;
	line-height: 1.5;
}

@media screen and (max-width: 69em) {
	.block {
		float: left;
		width: 80% !important;
		padding: 1em;
	}
}


@media screen and (max-width: 25em) {

	body {
		font-size: 80%;
	}
}

@media only screen
and (min-device-width : 768px)
and (max-device-width : 1024px) {
    body {
	background-image: url(../images/foto3.jpg);
	-moz-background-size: auto;
	-webkit-background-size: auto;
	background-size: auto;
    }
}